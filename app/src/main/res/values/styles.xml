<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardCornersLeft" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_left</item>
    </style>

    <style name="ShapeAppearance_custom_corners_left" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="CustomCardCornersRight" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners_right</item>
    </style>

    <style name="ShapeAppearance_custom_corners_right" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>

    <style name="WeatherParamsDynamicText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherParamsStaticText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="spinnerDropDownStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">@color/white</item>
        <item name="spinnerDropDownItemStyle">@style/spinnerDropDownStyle</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>